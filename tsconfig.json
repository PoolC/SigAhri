{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "keyofStringsOnly": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*",
    "types/global.d.ts"
  ],
  "exclude": ["node_modules"]
}